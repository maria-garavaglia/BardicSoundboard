<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<VBox fx:id="mainVBox" fx:controller="com.tmgmusic.controllers.MainWindow"
      xmlns:fx="http://javafx.com/fxml">
    <MenuBar>
        <menus>
            <Menu text="File">
                <items>
                    <!--                <MenuItem text="New"/>-->
                    <MenuItem text="Open" onAction="#openFile"/>
                    <!--                <MenuItem text="Save" onAction="#saveFile"/>-->
                    <MenuItem text="Save As..."/>
                    <!--                <SeparatorMenuItem  />-->
                    <!--                <MenuItem text="Exit"/>-->
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="About" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <VBox>
        <padding>
            <Insets top="15" right="15" bottom="15" left="15" />
        </padding>
        <ListView fx:id="songListView" />
        <HBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Label text="Current Song: " />
            <Label fx:id="currentSong"/>
        </HBox>
        <HBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
            <Button text="Play" prefWidth="100" onAction="#play" />
            <Button text="Stop" prefWidth="100" onAction="#stop" />
        </HBox>
    </VBox>
</VBox>
